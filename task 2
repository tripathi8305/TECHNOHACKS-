#include <iostream>
// #include <cstdlib>
// #include <time.h>
using namespace std;

int main () 
{
    int face1=0,  face2=0, sum=0, roll=4;//declaring variables and total rolls

    srand (time(NULL));//setting random number

    while (roll>0){


        face1 =rand()% 6 + 1;
        cout<<"Your first roll is " <<face1<< endl;
        face2 =rand()% 6 + 1;
        cout<<"You second roll is" <<face2<< endl;

    
    sum = face1+face2;//sum of rolls
    cout <<endl;
    }
    return 0;
}
